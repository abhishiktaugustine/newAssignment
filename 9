#include<iostream>
#include<string>


using namespace std;
int i,n;
int *arr;

void getMenu();
void initializeArray();
void display();


void main() {
	int choice;
	do {
	getMenu();
	
	cin >> choice;
	
		switch (choice) {
		case 1:
			initializeArray();
			break;
		case 2:
			display();
			break;

		case 3:
			cout << "Please Enter a valid option \n" << endl;
		}
	} while (choice != 3);
	


}
void getMenu() {
	cout << "-----Welcome--"<<endl;
	cout << "---Press 1 ----- To Enter the element" << endl;
	cout << "---Press 2 ----- To Display the element" << endl;
}

void initializeArray() {
	cout << "Enter the size of the array : ";
	cin >> n;
	arr = new int[n];
	for (i = 0;i < n;i++) {
		cout << "Enter the element : ";
		cin >> arr[i];
	}
}
void display() {
	for (i = 0;i < n;i++) {
		cout << "The Elements you entered are :"<<arr[i]<<endl;
	}

}
